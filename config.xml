<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "net.oisys.www"
        version   = "1.0">
    <name>OIsys FlashLight App</name>

    <description>
        Flash light turn on and off app.
    </description>

    <author href="http://oisys.net" email="admin@oisys.net">
        OptimalInfo Systems Inc.
    </author>

    <content src="index.html" />
    <access origin="*" />

    <feature name="http://api.phonegap.com/1.0/device" />
    
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="orientation"      value="default" />

    <gap:plugin name="com.phonegap.plugins.barcodescanner" version="1.1.0" />
    <gap:plugin name="nl.x-services.plugins.flashlight" version="2.0.1" />
    
